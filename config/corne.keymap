                numbers_row_layer {    // ---Layer 4---
                        display-name = "Modified_numbers'-row";
                        bindings = <
//╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮ ╭─────────────┬─────────────┬─────────────┬─────────────┬─────────────╮
    &kp RA(LS(N1)) &kp RA(LS(N2)) &kp RA(LS(N3)) &kp RA(LS(N4)) &kp RA(LS(N5)) &kp RA(LS(N6)) &kp RA(LS(N7)) &kp RA(LS(N8)) &kp RA(LS(N9)) &kp RA(LS(N0))
